{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/spec",
    "types": [
      "jasmine",
      "node",
      "jssha"
    ],
    "paths": {
      "@rd/core": [
        "./index.ts"
      ],
      "@rd/core/*": [
        "./*"
      ],
      "@rd/core/datetime": [
        "./datetime/index.ts"
      ],
      "@rd/core/testing": [
        "./testing/index.ts"
      ]
    }
  },
  "files": [
    "src/test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
